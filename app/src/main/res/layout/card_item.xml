<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    android:layout_height="150dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2B30"
    android:padding="6dp">

    <TextView
        android:id="@+id/roomId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000000"
        android:textSize="28sp"
        android:textColor="#91908C"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:textColor="#b2fab4"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/roomId"
        app:layout_constraintTop_toBottomOf="@+id/roomId" />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/roomName"
        app:layout_constraintTop_toBottomOf="@+id/roomName"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/user1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:elevation="0dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/user1IV"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/user1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:elevation="0dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/user1IV"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/user1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:elevation="0dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/user1IV"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/user1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:elevation="0dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/user1IV"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/user1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:elevation="0dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="20dp">
            <TextView
                android:text="0+"
                android:gravity="center"
                android:id="@+id/user1IV"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:text="0"
        android:textSize="10sp"
        android:backgroundTint="#b2fab4"
        app:icon="@drawable/ic_baseline_groups_24"
        app:iconGravity="start"
        app:layout_constraintBottom_toBottomOf="@+id/roomName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/roomId" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="0"
        android:textSize="10sp"
        android:backgroundTint="#b2fab4"
        android:layout_margin="8dp"
        app:icon="@drawable/ic_baseline_credit_card_24"
        app:iconGravity="start"
        app:layout_constraintEnd_toEndOf="@+id/materialButton"
        app:layout_constraintStart_toStartOf="@+id/materialButton"
        app:layout_constraintTop_toBottomOf="@+id/materialButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

